---
import Layout from '../layouts/Layout.astro';
import codigo from '../assets/codigo.png'; 
import mor8 from '../assets/mor8.avif';
import mor1 from '../assets/mor1.avif';

---
<Layout>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

<section class="hero">
  <div class="overlay"></div>

  <div class="hero-img">
    <img src={mor1.src} alt="Imagen de fondo" />
  </div>

  <div class="contenido tarjeta">
    <h1 class="nombre">Sofía García Cruz</h1>
    <h2 class="rol">Estudiante de Ingeniería en Sistemas Computacionales</h2>

    <p class="intro">
      Bienvenid@ a mi portafolio profesional.
    </p>

    
</section>

</Layout>

<style>
body {
  margin: 0;
  font-family: 'Poppins', sans-serif;
  background: #E8DCF4; /* color base, no se verá la línea */
}

.hero {
  position: relative;
  width: 100%;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-family: 'Poppins', sans-serif;
  overflow: hidden;

  /* Fondo degradado de respaldo */
  background: linear-gradient(180deg, #989BBE -10%, #E8DCF4 100%);
}

.hero-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.hero-img img {
  width: 100%;
  height: 100%;
  object-fit: cover; /* cubre todo sin deformar */
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.35); /* oscurece la imagen y cubre fondo blanco */
  z-index: 2;
}

.contenido {
  position: relative;
  z-index: 3; /* texto siempre encima */
  max-width: 600px;
  padding: 0 1.5rem;
  color: #fff;
}


.nombre {
  font-family: 'Playfair Display', serif;
  font-size: 3rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.rol {
  font-family: 'Lora', serif;
  font-weight: 500;
  font-size: 1.6rem;
  margin-bottom: 1.2rem;
  line-height: 1.4;
  text-align: center;
}

.intro {
  font-family: 'Poppins', sans-serif;
  font-weight: 300;
  font-size: 1.1rem;
  line-height: 1.7;
  margin-bottom: 1.5rem;
}
.contenido.tarjeta {
  position: relative;
  z-index: 3;
  max-width: 650%;
  padding: 2rem;
  background: rgba(224, 224, 224, 0.6); /* menos transparencia */
  color: #151515;
  border-radius: 1rem;
  box-shadow: 0 8px 20px rgba(0,0,0,0.3);
}
.overlay {
  background: rgba(0,0,0,0.5); /* más oscuro */
  backdrop-filter: blur(4px);   /* difumina la imagen detrás del texto */
}


.contenido.tarjeta h1,
.contenido.tarjeta h2,
.contenido.tarjeta p {
  text-shadow: 1px 1px 4px rgba(0,0,0,0.4);
}



.btn:hover {
  transform: translateY(-3px);
  background: rgba(134, 136, 173, 0.85);
}

@media (max-width: 600px) {
  .nombre { font-size: 2.4rem; }
}
</style>
