---
import Layout from "../layouts/Layout.astro";
import so from "../assets/so.jpg";
---

<Layout>
  <section class="contenido-principal">
    <div class="tarjeta-sobre-mi">
      <div class="contenedor-imagen">
        <div class="fondo-imagen"></div>
        <img
          src={so.src}
          alt="Foto de Sofía García Cruz"
          class="imagen-perfil"
        />
      </div>

      <div class="texto-sobre-mi">
        <h1 class="titulo">Hola, soy Sofia Garcia Cruz</h1>

        <p class="descripcion">
          Soy estudiante de Ingeniería en Sistemas Computacionales en la
          Universidad Mexiquense del Bicentenario, actualmente curso el séptimo
          semestre. Apasionada por la programación y la resolución de problemas,
          disfruto aprender nuevas tecnologías y explorar áreas como
          automatización y desarrollo web. Durante mi formación, he adquirido
          habilidades y busco siempre aplicar mis conocimientos en estos
          proyectos.
        </p>

        <div class="linea-divisoria"></div>

        <div class="datos-personales">
          <div class="dato">
            <span class="material-icons-outlined icono">school</span> Ing. en Sistemas
            Computacionales
          </div>
          <div class="dato">
            <span class="material-icons-outlined icono">place</span> Estado de México,
            MX
          </div>
          <div class="dato">
            <span class="material-icons-outlined icono">language</span> Español
          </div>
          <div class="dato">
            <span class="material-icons-outlined icono">code</span> Desarrollo Web
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<link
  href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap"
  rel="stylesheet"
/>
<link
  href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined"
  rel="stylesheet"
/>

<style>
  .contenido-principal {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 6rem 1.5rem;
    background: linear-gradient(180deg, #989bbe 0%, #e8dcf4 100%);
  }
  :global(.dark) .contenido-principal {
    background: linear-gradient(180deg, #1f1f2e 0%, #262637 100%);
  }

  .tarjeta-sobre-mi {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    background-color: #dbd1e9;
    color: #1f1f1f;
    border-radius: 1.5rem;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    padding: 3rem;
    max-width: 1000px;
    width: 100%;
  }
  :global(.dark) .tarjeta-sobre-mi {
    background-color: #2a2740;
    color: #f0ebff;
  }

  .contenedor-imagen {
    position: relative;
  }
  .fondo-imagen {
    position: absolute;
    width: 220px;
    height: 220px;
    background-color: #989bbe;
    border-radius: 1.2rem;
    transform: rotate(-5deg);
    z-index: 0;
  }
  :global(.dark) .fondo-imagen {
    background-color: #4b4568;
  }
  .imagen-perfil {
    position: relative;
    width: 200px;
    height: 200px;
    border-radius: 1.2rem;
    object-fit: cover;
    border: 5px solid #cdc6e7;
    z-index: 1;
  }
  :global(.dark) .imagen-perfil {
    border-color: #6f66a8;
  }

  .texto-sobre-mi {
    max-width: 600px;
  }
  .titulo {
    font-family: "Playfair Display", serif;
    color: #000c12;
    font-size: 2.2rem;
    font-weight: 700;
  }
  :global(.dark) .titulo {
    color: #f4f0ff;
  }
  .descripcion {
    font-size: 1.2rem;
    color: #2f2f3d;
    text-align: justify;
  }
  :global(.dark) .descripcion {
    color: #dcd7f9;
  }

  .linea-divisoria {
    border-top: 1px solid rgba(0, 0, 0, 0.2);
    margin: 1.5rem 0;
  }
  :global(.dark) .linea-divisoria {
    border-top: 1px solid rgba(200, 200, 255, 0.2);
  }

  .datos-personales {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1rem;
  }

  .dato {
    background-color: #dbd1e9;
    padding: 0.8rem 1rem;
    border-radius: 0.8rem;
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }
  :global(.dark) .dato {
    background-color: #3b3657;
  }

  .icono {
    color: #3681ab;
  }
  :global(.dark) .icono {
    color: #a8caff;
  }

  @media (min-width: 768px) {
    .tarjeta-sobre-mi {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }
</style>
