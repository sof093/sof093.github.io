<style>
body {
  margin: 0;
  font-family: 'Poppins', sans-serif;
  background: #E8DCF4; /* color base, no se ver√° la l√≠nea */
}

.contenido-principal {
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 6rem 1.5rem;
  background: linear-gradient(180deg, #989BBE 0%, #E8DCF4 100%);
}



  /* üíé Tarjeta principal */
  .tarjeta-sobre-mi {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    background-color: #dbd1e9;
    color: #1f1f1f;
    border-radius: 1.5rem;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    padding: 3rem;
    max-width: 1000px;
    width: 100%;
  }

  /* üì∏ Imagen */
  .contenedor-imagen {
    position: relative;
    flex-shrink: 0;
  }

  .fondo-imagen {
    position: absolute;
    width: 220px;
    height: 220px;
    background-color: #989bbe;
    border-radius: 1.2rem;
    transform: rotate(-5deg);
    z-index: 0;
    box-shadow: 0 8px 20px rgba(54, 129, 171, 0.3);
  }

  .imagen-perfil {
    position: relative;
    width: 200px;
    height: 200px;
    border-radius: 1.2rem;
    object-fit: cover;
    border: 5px solid #cdc6e7;
    z-index: 1;
  }

  /* üìù Texto */
  .texto-sobre-mi {
    text-align: left;
    color: #2c2c2c;
    max-width: 600px;
  }

  .titulo {
    font-family: "Playfair Display", serif;
    color: #000c12;
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .descripcion {
    font-family: "Lora", serif;
    color: #2f2f3d;
    font-size: 1.6rem;
    line-height: 1.6;
    margin-bottom: 1rem;
    text-align: justify;
  }

  /* üîπ L√≠nea divisoria */
  .linea-divisoria {
    border-top: 1px solid rgba(255, 255, 255, 0.4);
    margin: 1.5rem 0;
  }

  /* üìò Datos personales */
  .datos-personales {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1rem;
    font-size: 0.95rem;
  }

  .dato {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background-color: #dbd1e9;
    padding: 0.8rem 1rem;
    border-radius: 0.8rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  .icono {
    color: #3681ab;
    font-size: 1.2rem;
  }

  /* üñ•Ô∏è Pantallas grandes */
  @media (min-width: 768px) {
    .tarjeta-sobre-mi {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }

    .contenedor-imagen {
      margin-right: 2rem;
    }

    .texto-sobre-mi {
      text-align: left;
    }
  }
</style>
